<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/small"
    android:paddingTop="@dimen/small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_width"
        android:layout_toLeftOf="@+id/right_view"
        android:orientation="horizontal"
        android:weightSum="5">

        <EditText
            android:id="@+id/owner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edit_text_border"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/relationship"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/small_plus"
            android:layout_marginRight="@dimen/small_plus"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border" />

        <EditText
            android:id="@+id/target"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edit_text_border"
            android:inputType="textCapCharacters" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_view"
        android:layout_width="60dp"
        android:layout_height="@dimen/button_width"
        android:layout_toLeftOf="@+id/thr_delete">

        <TextView
            android:id="@+id/text_plus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/small"
            android:text="=" />

        <EditText
            android:id="@+id/value"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:inputType="textCapCharacters" />
    </LinearLayout>

    <ImageView
        android:id="@+id/thr_delete"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_width"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/small"
        android:src="@drawable/delete" />
</RelativeLayout>