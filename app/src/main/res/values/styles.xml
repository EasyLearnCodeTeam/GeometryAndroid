<resources>

    <!-- Base application theme. -->
    <style name="Geometry" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Remove action bar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Base color -->
        <item name="colorAccent">@color/main_green</item>
        <item name="colorControlNormal">@color/main_green</item>
        <item name="colorControlActivated">@color/main_green</item>
        <item name="colorControlHighlight">@color/main_green</item>
        <item name="colorPrimary">@color/main_green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
</resources>
